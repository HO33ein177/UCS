

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <link rel="stylesheet" href="~/css/Home.css">
    <div class="left-section">
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/00/Siegel_FU_Berlin.svg"
                 alt="UniCourseSelect Logo">
            <h1>UniCourseSelect</h1>
        </div>
        <br />
        <div class="message">
            <h2>Don't Forget the Finals!!!!</h2>
            <p>Pick Your desired Course Before others can even log in</p>
        </div>
        <img src="https://www.fu-berlin.de/en/sites/startseite-test/inhalte/intl-menschen.jpg?width=1000" alt="University Image" class="university-image">
    </div>
    <div class="right-section">
        <div class="form-container">
            <h2>Create Account</h2>
            <form>
                <input type="text" placeholder="FullName">
                <input type="text" placeholder="StudentId">
                <input type="text" placeholder="Degree">
                <input type="text" placeholder="Department">
                <input type="text" placeholder="Major">
                <input type="password" placeholder="Password">
                <input type="password" placeholder="Confirm Password">
                <button type="submit">Register</button>
            </form>
            <p>Already have an account? <a href="#">Login</a></p>
            <div class="social-login">
                <p>Or you can:</p>
                <button class="google-btn">Sign in with Google</button>
                <button class="facebook-btn">Continue with Facebook</button>
            </div>
        </div>
    </div>
</div>
