@model Department


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Department</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                <input asp-for="DepartmentId" hidden />
                @* <div asp-validation-summary="All"></div> *@

                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" disabled class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">
                    <input asp-for="DepartmentId" disabled class="form-control border shadow" />
                    <label asp-for="DepartmentId" class="ms-2"></label>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                
                <div class="form-floating py-1 col-12">
                    <input asp-for="DepartmentNumber" disabled class="form-control border shadow" />
                    <label asp-for="DepartmentNumber" class="ms-2"></label>
                    <span asp-validation-for="DepartmentNumber" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-check-circle"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}